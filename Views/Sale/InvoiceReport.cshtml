                            @for (int i = 0; i < ((DataTable)ViewBag.InvoiceData).Rows.Count; i++)
                            {
                                var row = ((DataTable)ViewBag.InvoiceData).Rows[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@row["ProductId"]</td>
                                    <td>@row["UnitId"]</td>
                                    <td>@row["Quantity"]</td>
                                    <td>@(Convert.ToDecimal(row["Price"]).ToString("C2"))</td>
                                    <td>@(Convert.ToDecimal(row["Total"]).ToString("C2"))</td>
                                </tr>
                            }
