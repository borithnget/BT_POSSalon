@model jotun.Models.AppointmentModel

@{
    ViewBag.Title = "Appointment Details";
}
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<style>
    .ui-datepicker {
        z-index: 1600 !important;
    }
</style>
<div class="card" style="margin:70px 50px !important;">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Appointment Details</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" id="AppointmentId" name="AppointmentId" value="@Model.AppointmentId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.AppointmentDate, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.AppointmentDate" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.CustomerName" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.CustomerContact, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.CustomerContact" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Assigned Employee", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@ViewBag.EmployeeName" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.StatTime, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.StatTime" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.EndTimeExpected, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.EndTimeExpected" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.PriceFull, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.PriceFull" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.DiscountAmount, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.DiscountAmount" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PriceFinal, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="@Model.PriceFinal" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-offset-4 col-md-8">
                                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

@section scripts{
    <link rel="stylesheet" href="~/Content/css/site.css">
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
