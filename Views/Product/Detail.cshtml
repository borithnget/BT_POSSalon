@model jotun.Models.ProductViewModels

@{
    ViewBag.Title = "Detail";
}

@using (Html.BeginForm("Detail", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div style="background-color:#e9ecef; padding:15px;">
        <h4>Detail Product </h4>
        <hr />
        <div class="center-block" style="background-color:transparent">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">

                        <div class="modal-body">
                            Are you sure you want to delete?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            <input type="reset" value="Delete" i class="btn btn-danger" onclick="window.location='/product/Delete/@Html.ValueFor(model => model.Id)';" />
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-md-8" style="background-color:transparent">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6" style="background-color:transparent">
                                    <div class="form-group ">
                                        @Html.Label("Date", new { @class = "col-md-12 control-label" })
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.CreatedDate, new { @class = " form-control", @readonly = "readonly" })
                                        </div>

                                    </div>
                                </div>

                                <div class="col-md-6" style="background-color:transparent; ">
                                    <div class="row">
                                        <div class="col-12">
                                            <span style=" float:left">
                                                @Html.Label("Category Name", new { @class = "col-md-12 control-label" })
                                            </span>
                                            <span style="color:red; float:left; font-size:20px">*</span>

                                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "col-md-6  getcategoryname hidden", @readonly = "readonly", @style = "border: none; background-color:transparent; color:transparent" })


                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div>
                                                    <div class="col-md-12 col-sm-12" style="float:left">
                                                        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control ", @readonly = "readonly" })
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group" style="background-color:transparent; margin-top:-15px">
                            <div class="row">
                                <div class="col-md-6" style="background-color:transparent;">
                                    <div class="form-group">
                                        <span style=" float:left">
                                            @Html.Label("Product Code", new { @class = "col-md-12 control-label disabled" })
                                        </span>
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control getAutoProductCo", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="background-color:transparent;">
                                    <div class="form-group">
                                        <span style=" float:left">
                                            @Html.Label("Product Name", new { @class = "col-md-12 control-label disabled" })
                                        </span>
                                        <span style="color:red; float:left; font-size:20px">*</span>
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control ", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="form-group" style="background-color:transparent; margin-top:-15px">
                            <div class="row">
                                <div class="col-md-6" style="background-color:transparent;">
                                    <div class="form-group">

                                        <span style=" float:left">
                                            @Html.Label("QuantityInStock (Retail)", new { @class = "col-md-12 control-label disabled" })
                                        </span>
                                        <span style="color:red; float:left; font-size:20px">*</span>

                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.QuantityInStockRetail, new { @class = "form-control ", type = "number", step = "1.00", pattern = "[0-9]+([.][0-9]+)?", min = "1", max = "99999999", @readonly = "readonly" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="background-color:transparent;">
                                    <div class="form-group">

                                        <span style=" float:left">
                                            @Html.Label("QuantityInStock", new { @class = "col-md-12 control-label disabled" })
                                        </span>
                                        <span style="color:red; float:left; font-size:20px">*</span>

                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.QuantityInStock, new { @class = "form-control ", type = "number", step = "1.00", pattern = "[0-9]+([.][0-9]+)?", min = "1", max = "99999999", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="form-group" style="background-color:transparent; margin-top:-15px">
                            <div class="row">
                                <div class="col-md-6" style="background-color:transparent;">
                                    <div class="form-group">

                                        <span style=" float:left">
                                            @Html.Label("Default Unit Type", new { @class = "col-md-12 control-label disabled" })
                                        </span>
                                        <span style="color:red; float:left; font-size:20px">*</span>

                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.UnitQuant, new { @id = "UnitQuant", @class = "form-control ", type = "text", step = "0", pattern = "[0-9]+([.][0-9]+)?", min = "1", max = "99999999", onchange = "Check1()", @autocomplete = "off", maxlength = 8, @readonly = "readonly" })
                                            
                                            <input type="hidden" id="Unitid" value="@Model.UnitQuant" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="background-color:transparent;">
                                    <span style=" float:left">
                                        @Html.Label("Re-order Quantity Alert", new { @class = "col-md-12 control-label disabled" })
                                    </span>
                                    <span style="color:red; float:left; font-size:20px">*</span>

                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.quantity_alert, new { @id = "quantity_alert", @class = "form-control ", type = "number", step = "0", pattern = "[0-9]+([.][0-9]+)?", min = "1", max = "99999999", onchange = "Check1()", @autocomplete = "off", maxlength = 8, @readonly = "readonly" })

                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="form-group" style="background-color:transparent; margin-top:-15px">
                            <div class="row">


                                <div class="col-md-12" style="background-color:transparent">
                                    <div class="form-group">
                                        @Html.Label("Description", new { @class = "col-md-3 control-label" })
                                        <div class="col-md-12">
                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control kosal", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                    </div>
                    <div class="col-md-4" style="background-color:transparent; ">
                        <div class="col-md-8">
                            <div hidden>
                                @Html.TextBoxFor(m => m.ProductImage, new { @class = "form-control imageBrowes ", Type = "file" })
                            </div>
                            <br />
                            <div id="imgPreview" class="thumbnail">
                                <img src="@Url.Content(Model.ProductImage)" style=" background-color:white; width: 100%;height: auto;" class="img-responsive" id="targetImg" />
                                <div class="caption">
                                    <a href="#" onclick="ClearPreview()"><i class="glyphicon glyphicon-trash"></i></a>
                                    <span id="description"></span>
                                </div>
                                <br />
                                <br />

                            </div>
                        </div>
                        <div class="col-md-2 thumbnail" id="uploadedImage">
                        </div>

                    </div>
                </div>

            </div>
            <div class="row table-responsive" style="padding:0 0 0 20px">
                <table id="clientlist" class="table table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Unit Type</th>
                            <th>Quantity <span style="color:red; ">Litre(s)</span></th>
                            <th>Cost</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                            foreach (var item in Model.GetDetail)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td hidden>@item.Id</td>
                                    <td>@item.UnitTypeID</td>
                                    <td>@item.QTY</td>
                                    <td>@item.Cost</td>
                                    <td>@item.Price</td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-9">
                    <a href="@Url.Action("SynceProductStockbySaleProductId","Sale",new { id = Model.Id })" class="btn btn-default">Sync Sale QTY</a>
                    <input type="reset" value="Edit" id="kosalid" class="btn btn-info" onclick="window.location='/Product/Edit/@Html.ValueFor(model => model.Id)';" />
                    <input type="reset" value="Delete" id="kosalid" class="btn btn-danger" data-toggle="modal" data-target="#myModal" />
                    <input type="reset" value="Cancel" class="btn btn-danger" onclick="window.location='/Product';" />

                </div>
            </div>
        </div>

    </div>


    @section Scripts {
        <script>


        </script>

        @Scripts.Render("~/bundles/jqueryval")
    }

}


