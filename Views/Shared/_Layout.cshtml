    <style>
        .main-header.navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030;
        }

        .nav-item.has-treeview {
            position: relative;
        }

        .nav-treeview {
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 10px 15px;
            margin-top: 5px;
            display: none;
            z-index: 1050;
        }

        .nav-item.has-treeview.active .nav-treeview {
            display: block;
        }

        .nav-item .nav-link {
            padding-left: 25px;
            color: #333;
            display: flex;
            align-items: center;
        }

            .nav-item .nav-link i {
                margin-right: 8px;
            }

        .nav-treeview .nav-item:hover {
            background-color: #007bff;
            color: white;
        }

        .nav-treeview .nav-item .nav-link i {
            color: #6c757d;
        }

            .nav-treeview .nav-item .nav-link i.fas {
                margin-left: 5px;
            }

        .nav-link p .right {
            margin-left: 8px;
        }

        .aactive {
            background-color: #fab228;
            color: #2b2654 !important;
        }
        .content-wrapper {
            padding-top: 80px !important;
        }
    </style>
    @RenderSection("style", required: false)
</head>
