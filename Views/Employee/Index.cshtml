@model IEnumerable<jotun.Models.EmployeeRoleViewModel>
@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<a href="@Url.Action("Create")" class="btn btn-primary">
    <i class="fas fa-plus" style="margin-right: 5px;"></i> Add New
</a>

<table id="employeeTable" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.RoleName</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@(employee.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <a href="@Url.Action("Detail", new { id = employee.EmployeeId })" class="btn btn-info">View</a>
                    <a href="@Url.Action("Edit", new { id = employee.EmployeeId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = employee.EmployeeId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="~/Content/css/site.css">
    <link href="https://cdn.jsdelivr.net/npm/datatables@1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/datatables@1.10.24/js/jquery.dataTables.min.js"></script>
    <link href="~/Content/vendor/datatables/datatables.min.css" rel="stylesheet" />
    <script src="~/Scripts/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#employeeTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [5, 10, 25, 50, 100],
                "language": {
                    "search": "Search Employee :"
                }
            });
        });
    </script>
}
